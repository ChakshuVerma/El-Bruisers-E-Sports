<script>

    var players = [
        {'name': 'Random1', 'unique_id': '123'},
        {'name': 'Random2', 'unique_id': '124'},
        {'name': 'Random3', 'unique_id': '125'},
        {'name': 'Random4', 'unique_id': '126'},
        {'name': 'Random5', 'unique_id': '127'},
        {'name': 'Random6', 'unique_id': '128'},
    ]
    buildTable(players);

    function buildTable(players){
        var table = document.getElementById('myTable');
        table.innerHTML = '';

        if(players.length === 0){
            var row = `<tr>
                            <td colspan="2" style="text-align:center">No Players Found</td>
                        </tr>`
                        
            table.innerHTML += row;   
        }
        else{
            for(var i=0; i<players.length; i++){
            var row = `<tr>
                            <td>${players[i].name}</td>
                            <td>${players[i].unique_id}</td>
                        </tr>`
                        
            table.innerHTML += row;
        }   
        }
    }

    $('#player-search-input').on('keyup', () => {
        var value = $('#player-search-input').val();
        value = value.trim()
        var searchResults = searchTable(value, players);
        buildTable(searchResults);
    })

    function searchTable(value, players){
        let filteredData = [];
        for(var i=0; i<players.length; i++){
            value = value.toLowerCase();
            var name = players[i].name.toLowerCase();
            var id = players[i].unique_id;

            if(name.includes(value) || id.includes(value)){
                filteredData.push(players[i]);
            }
        }

        return filteredData;
    }

    // Navbar and Scroll Up Button
    $(window).scroll(function(){
        if(this.scrollY > 20){
            $('.navbar').addClass("sticky");
        }else{
            $('.navbar').removeClass("sticky");
        }
        
        if(this.scrollY > 500){
            $('.scroll-up-btn').addClass("show");
        }else{
            $('.scroll-up-btn').removeClass("show");
        }
    });
    
    $('.scroll-up-btn').click(function(){
        $('html').animate({scrollTop: 0});
        $('html').css("scrollBehavior", "auto");
    });

    $('.carousel').owlCarousel({
        margin: 20,
        autoplayTimeOut: 2000,
        autoplayHoverPause: true,
        responsive: {
            0:{
                items: 1,
                nav: false
            },
            600:{
                items: 2,
                nav: false
            },
            1000:{
                items: 3,
                nav: false
            }
        }
    });
    
</script>

